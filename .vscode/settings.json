{
    //------------------------- A -------------------------//

    //------------------------- B -------------------------//

    //-- BRACKET PAIR COLORIZER --//
    "bracketPairColorizer.showVerticalScopeLine": true,
    "bracketPairColorizer.highlightActiveScope": true,
    "bracketPairColorizer.showHorizontalScopeLine": true,

    //------------------------- C -------------------------//

    //------------------------- D -------------------------//

    //------------------------- E -------------------------//

    //-- EDITOR --//
    "editor.fontSize": 14,
    "editor.lineHeight": 0,
    "editor.fontFamily": "'Fira Code Light', 'Source Code Pro'",
    "editor.fontWeight": "200",
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "mouseover",
    // "editor.letterSpacing": 0.25,
    "editor.tokenColorCustomizations": {
        //"comments": "#c4c0d693",
        //"functions": "#FF0000",
        //"keywords": "#FF0000",
        //"numbers": "#FF0000",
        //"strings": "#FF0000",
        //"types": "#f66",
        //"variables": "#FF0000",
    },

    //-- EMMET --//
    "emmet.showSuggestionsAsSnippets": true,

    //-- EXPLORER --//
    "explorer.openEditors.visible": 3,

    //-- EXTENSIONS --//
    "extensions.ignoreRecommendations": true,
    "[python]": {
        "editor.rulers": [
            79,
            120
        ]
    },

    //------------------------- F -------------------------//

    //-- FILES --//
    "files.autoSave": "off",

    //------------------------- G -------------------------//

    //-- GIT --//
    "git.autoStash": true,
    "git.enableSmartCommit": true,

    //-- GIT HISTORY --//
    "gitHistory.hideCommitViewExplorer": true,

    //-- GO --//
    "go.autocompleteUnimportedPackages": true,

    //-- GUIDES --//
    "guides.active.width": 1,
    "guides.sendUsagesAndStats": false,

    //------------------------- H -------------------------//

    //-- HTML --//
    "html.format.indentHandlebars": true,
    "html-css-class-completion.enableEmmetSupport": true,

    //------------------------- I -------------------------//

    //------------------------- J -------------------------//

    //-- JAVA --//
    "java.home": "C:\\Program Files\\Java\\jdk1.8.0_131",

    //-- JAVASCRIPT --//
    "javascript.preferences.quoteStyle": "single",

    //------------------------- K -------------------------//

    //------------------------- L -------------------------//

    //-- LIVESERVER --//
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "chrome --incognito --headless --remote-debugging-port=9222 C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe --private-window",

    //------------------------- M -------------------------//

    //------------------------- N -------------------------//

    //-- NPM --//
    "npm.enableScriptExplorer": true,

    //-- NPM-INTELLISENSE --//
    "npm-intellisense.packageSubfoldersIntellisense": true,
    "npm-intellisense.scanDevDependencies": true,
    "npm-intellisense.showBuildInLibs": true,

    //------------------------- O -------------------------//

    //------------------------- P -------------------------//

    //-- PATH-INTELLISENSE --//
    "path-intellisense.showHiddenFiles": true,

    //-- PHP --//
    "php.validate.executablePath": "E:\\xampp\\php\\php.exe",
    "php.executablePath": "E:\\xampp\\php\\php.exe",

    //-- PRETTIER --//
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,

    //-- PYTHON --//
    "python.pythonPath": "C:\\Python27\\python.exe",
    "python.sortImports.args": ["pythoncom", "pyHook", "win32clipboard"],

    //------------------------- Q -------------------------//

    //-- QUOKKA --//
    "quokka.suppressExpirationNotifications": true,

    //------------------------- R -------------------------//

    //-- RUBY --//
    "ruby.codeCompletion": "rcodetools",
    "ruby.format": "rubocop",
    "ruby.interpreter.commandPath": "../../../../../mnt/../treylanz/.rvm/rubies/ruby-2.5.0/bin/ruby",
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,

    //-- RUST --//
    "rust-client.rustupPath": "../../../../../mnt/../treylanz/.cargo/bin/rustup",
    "rust-client.useWSL": true,
    "rust.all_features": true,

    //------------------------- S -------------------------//

    //-- SCSS --//
    "scss.showErrors": true,

    //-- SOLARGRAPH (RUBY) --//
    "solargraph.formatting": true,

    //------------------------- T -------------------------//

    //-- TSLINT --//
    "tslint.enable": false,

    //-- TYPESCRIPT --//
    "typescript.preferences.quoteStyle": "single",

    //------------------------- U -------------------------//

    //------------------------- V -------------------------//

    //------------------------- W -------------------------//

    //-- WINDOW --//
    "window.zoomLevel": -1,

    //-- WORKBENCH --//
    "workbench.editor.showTabs": true,
    "workbench.editor.openPositioning": "last",
    "workbench.list.horizontalScrolling": true,
    "workbench.tree.indent": 8,
    "workbench.settings.editor": "json",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.colorCustomizations": {
        "[Cobalt Next]": {
            "editorCursor.foreground": "#ffffffa4"
        },
        "[Night Owl No Italics]": {
            "editorWhitespace.foreground": "#536888be",
            // "contrastBorder": "#341290"
        },
        "[Oceanic Next]": {
            // "editorWhitespace.foreground": "#536888b9",
            "editorWhitespace.foreground": "#536888",
            "activityBarBadge.background": "#536888b9"
        },
    },

    //------------------------- X -------------------------//

    //------------------------- Y -------------------------//

    //------------------------- Z -------------------------//

}
